<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/a">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kimia Mobile"
            android:textAlignment="center"
            android:textSize="50dp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="Adobe Fan Heiti Std B" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="USERNAME :"
            android:id="@+id/textView5"
            android:textSize="30dp"
            android:textColor="@color/bright_foreground_material_light"
            android:textStyle="bold"
            android:textAlignment="center" />

        <EditText
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/username"
            android:textColorHint="#050505"
        android:textColor="#050505"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PASSWORD :"
            android:id="@+id/textView6"
            android:textSize="30dp"
            android:textColor="@color/bright_foreground_material_light"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textAlignment="center" />

        <EditText
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:inputType="textPassword"
        android:id="@+id/password"
            android:textColor="#050505"
        android:textColorHint="#050505"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Password"
            android:textColor="#6bff01"
            android:id="@+id/view"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:id="@+id/log"
        android:background="#ff00e8"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:id="@+id/Register"
        android:textColor="#ff00e5"
        android:textStyle="bold"
        android:paddingTop="20dp"/>

    </LinearLayout>
</ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@COPYRIGHT:Kelompok 7"
        android:id="@+id/textView16"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ff0000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>